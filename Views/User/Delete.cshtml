@model UserRegistration.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h3>@ViewData["Title"]?.ToString()</h3>
<hr />
<h4>Are you sure you want to delete this user?</h4>
<div>
    <h5>@Model.FullName</h5>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                FullName
            </dt>
            <dd class="col-sm-10">
                @Model.FullName
            </dd>
            <dt class="col-sm-2">
                Gender
            </dt>
            <dd class="col-sm-10">
                @Model.Gender
            </dd>
            <dt class="col-sm-2">
                DateOfBirth
            </dt>
            <dd class="col-sm-10">
                @Model.DateOfBirth.ToString("yyyy-MM-dd")
            </dd>
            <dt class="col-sm-2">
                State
            </dt>
            <dd class="col-sm-10">
                @Model.State
            </dd>
            <dt class="col-sm-2">
                District
            </dt>
            <dd class="col-sm-10">
                @Model.District
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @Model.Phone
            </dd>
        </dl>
    </div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
